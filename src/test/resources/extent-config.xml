<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- report theme -->
        <!-- standard, dark -->
        <theme>dark</theme>

        <!-- document encoding -->
        <!-- defaults to UTF-8 -->
        <encoding>UTF-8</encoding>

        <!-- protocol for script and stylesheets -->
        <!-- defaults to https -->
        <protocol>https</protocol>

        <!-- title of the document -->
        <documentTitle>Extent Spark Report</documentTitle>

        <!-- report name - displayed at top-nav -->
        <reportName>Automation Report</reportName>

        <!-- report headline - displayed at top-nav, after reportHeadline -->
        <reportHeadline>Cucumber BDD Framework</reportHeadline>

        <!-- view report without internet -->
        <offlineMode>false</offlineMode>

        <!-- global date format override -->
        <!-- defaults to yyyy-MM-dd -->
        <dateFormat>dd-MM-yyyy</dateFormat>

        <!-- global time format override -->
        <!-- defaults to HH:mm:ss -->
        <timeFormat>HH:mm:ss</timeFormat>

        <!-- Screenshot Base64 Format -->
        <thumbnailForBase64>true</thumbnailForBase64>

        <!-- custom javascript -->
        <js></js>

        <!-- custom styles -->
        <css></css>
        <!-- custom javascript -->

        <scripts>
            <![CDATA[
                $(document).ready(function() {

                });
            ]]>
        </scripts>

        <!-- custom styles -->
        <styles>
            <![CDATA[

            ]]>
        </styles>
    </configuration>
</extentreports>